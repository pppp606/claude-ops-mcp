# Package Security Configuration
# ===============================

# Package installation integrity
package-lock=true
lockfile-version=3
save-exact=true
engine-strict=true

# Security settings
audit-level=moderate
fund=false

# Registry configuration
registry=https://registry.npmjs.org/

# Installation behavior
legacy-peer-deps=true
prefer-offline=true
progress=false

# Cache configuration
cache-min=3600

# Logging
loglevel=warn