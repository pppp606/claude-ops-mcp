{
  "name": "claude-ops-mcp",
  "version": "0.1.0",
  "description": "MCP server for managing Claude Code operation history",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claude-ops-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && node scripts/fix-imports.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist coverage",
    "ci": "npm run typecheck && npm run lint && npm run test:coverage && npm run build",
    "prepublishOnly": "npm run ci"
  },
  "keywords": [
    "mcp",
    "claude",
    "server",
    "operations",
    "history"
  ],
  "author": "Yuki Tanaka",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.19",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.4",
    "tslib": "^2.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "diff": "^8.0.2"
  }
}
